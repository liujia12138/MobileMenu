/* miniprogram/pages/wode/index.wxss */
.get-user-info{
  width: 85%;
  margin: 0 auto;
  border-radius: 10rpx;
  height: 200rpx;
  box-shadow: 0 0 10rpx #dbdbdb;
  margin-top: 60rpx;
}
.get-user-info button{
  height: 100%;
  width: 100%;
  line-height: 200rpx;
}
.user-info{
  width: 100%;
  margin-top: 60rpx;
}
.avatar-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-left: 20rpx;
}
.nickName{
  display: inline-block;
  margin-left: 20rpx;
}

/* menuList */
.menu{
  width: 100%;
  margin-top: 60rpx;
}
.menu-list{
  height: 80rpx;
  line-height: 80rpx;
  margin: 15rpx 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.menu-icon{
  width: 40rpx;
  height: 40rpx;
  float: left;
  vertical-align: top;
  margin-top: 20rpx;
  margin-right: 10rpx;
}
.menu-text{
  font-size: 26rpx;
  display: inline-block;
}
.right{
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin-top: 24rpx;
}
