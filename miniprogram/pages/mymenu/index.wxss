@import '../../style/common.wxss';
.container{
  padding-bottom: 30rpx;
}
.menu-item {
  width: 90%;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgb(192, 192, 192);
  margin: 24rpx 24rpx 0 24rpx;
  padding: 16rpx;
}
.menu-item navigator{
  height: 120rpx;
}

.pic-box{
    border-radius: 8rpx;
    margin-right: 12rpx;
    overflow: hidden;
}
.menu-pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.no-pic {
  width: 120rpx;
  height: 120rpx;
  font-size: 26rpx;
  line-height: 120rpx;
  border: 1px solid rgb(224, 224, 224);
  text-align: center;
  opacity: 0.5;
}
.menu-text{
  width: calc(100% - 140rpx);
}
.type{
  color: #fff;
  border-radius: 4rpx;
  padding: 4rpx 6rpx;
  font-size: 22rpx;
  margin-left:8rpx;
}
.cont{
  font-size: 26rpx;
  opacity: 0.8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.add-menu{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 80rpx;
  right: 40rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}
