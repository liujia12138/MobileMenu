/* components/focus/index.wxss */
.focus-item{
  margin-top: 28rpx;
}
.user-info{
  padding: 0 14rpx;
  margin-bottom: 10rpx;
}
.focus-avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.username{
  font-size: 28rpx;
  margin-left: 6rpx;
  color: #333;
}
.action-bar{
  height: 40rpx;
}
.action-item{
  margin-right: 30rpx;
  float: right;
}
.action-item text{
  font-size: 24rpx;
  color: #8a8a8a;
  margin-left: 8rpx;
}
.action-icon{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.article-info{
  padding: 0 16rpx;

}
.title{
  font-size: 26rpx;
  font-weight: 600;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 6rpx 0;
}
.cont{
  font-size: 22rpx;
  width: 100%;
  line-height: 32rpx;
}

/* swiper */
.pic-swiper{
  height: 400rpx;
}
.pic-swiper image{
  width: 100%;
}